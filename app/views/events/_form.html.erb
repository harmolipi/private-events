<%= simple_form_for @event, defaults: { wrapper: false, required: true, input_html: { class: "input" }, label_html: { class: "label" } } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :title, autofocus: true, input_html: { autocomplete: "text" } %>
    </div>
  </div>
    
  <div class="field">
    <div class="control">
      <%= f.input :description, input_html: { autocomplete: "text" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :date, html5: true, input_html: { autocomplete: "date" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :location, input_html: { autocomplete: "text" } %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
