<h2>New Event</h2>

<%= simple_form_for @event do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "text" }%>
    <%= f.input :description,
                required: true,
                input_html: { autocomplete: "text" } %>
    <%= f.input :date,
                required: true,
                input_html: { autocomplete: "text" } %>
    <%= f.input :location,
                required: true,
                input_html: { autocomplete: "text" } %>
 
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Event" %>
  </div>
<% end %>
