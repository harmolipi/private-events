<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper: false, input_html: {  }, label_html: { class: "label" } } ) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "input" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "input" } %>
            <%= f.input :remember_me,
                        label_html: { class: "checkbox" },
                        input_html: { type: "checkbox" },
                        as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button is-info" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
